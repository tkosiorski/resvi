{
  "manifest_version": 3,
  "name": "Resvi",
  "version": "0.1.0",
  "description": "Chrome extension for automated Zalando Lounge campaign product reservation",
  "permissions": [
    "storage",
    "alarms",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_title": "Resvi - Campaign Automation",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}